<div class="container">
    <div class="row">
        <center><h1>Feed de suas postagens</h1></center><br>
    </div>
    <br>
    <div class="row">
        <a href="/create" class="btn btn-primary btn-new-post-home">Adicionar um novo Post</a>
    </div>
    <hr>
    <div class="row">
        {{#each posts}}
            <div class="col-sm">
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title">{{dataValues.title}}</h5>
                        <p class="card-text">{{dataValues.content}}</p>
                        <a href="/delete/{{dataValues.id}}" class="card-link">Apagar</a>
                        <a href="/update/{{dataValues.id}}" class="card-link">Atualizar</a>
                    </div>
                </div>
                <br>
            </div>
        {{/each}}
    </div>
  </div>
</div>